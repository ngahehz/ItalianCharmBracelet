@model string
@{
    ViewData["Title"] = "RequireLogin";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Require Login</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item text-center text-white">@ViewData["RandomGreetingLogin"]</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- 404 Start -->
<div class="container-fluid py-5">
    <div class="container py-5 text-center">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <i class="bi bi-exclamation-triangle display-1 text-secondary"></i>
                <h1 class="mb-4">Let's login</h1>
                <h4 class="mb-4">Click on the person icon at the top right corner to log in! 👤➡️🔑</h4>
                <a asp-controller="Home" asp-action="Index" id="requiredlogin_returnurl" class="btn border-secondary rounded-pill py-3 px-5 mt-5">Go Back To Home</a>
            </div>
        </div>
    </div>
</div>

<script>
    if (!sessionStorage.getItem('requiredlogin_returnurl')) {
        sessionStorage.setItem('requiredlogin_returnurl', "@Model");
    }
</script>
<!-- 404 End -->
