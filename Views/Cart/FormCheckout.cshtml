@model ItalianCharmBracelet.ViewModels.CheckoutVM

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-item">
    <label asp-for="Name" class="form-label my-3" ></label><sup>*</sup>
    <input asp-for="Name" class="form-control" required />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-item">
    <label asp-for="Address" class="form-label my-3" ></label><sup>*</sup>
    <input asp-for="Address" class="form-control" required />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-item">
    <label asp-for="Cell" class="form-label my-3" ></label><sup>*</sup>
    <input asp-for="Cell" class="form-control" required />
    <span asp-validation-for="Cell" class="text-danger"></span>
</div>
<div class="form-item">
    <label asp-for="Note" class="form-label my-3"></label><sup>*</sup>
    <input asp-for="Note" class="form-control" />
</div>

<div class="form-check my-3">
    <input type="checkbox" class="form-check-input" id="Account-1" name="Accounts" value="Accounts">
    <label class="form-check-label" for="Account-1">Create an account?</label>
</div>
<hr>
<div class="form-check my-3">
    <input class="form-check-input" type="checkbox" id="Address-1" name="Address" value="Address">
    <label class="form-check-label" for="Address-1">Ship to a different address?</label>
</div>
<div class="form-item">
    <textarea name="text" class="form-control" spellcheck="false" cols="30" rows="11" placeholder="Oreder Notes (Optional)"></textarea>
</div>



