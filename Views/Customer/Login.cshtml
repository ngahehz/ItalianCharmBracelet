@model ItalianCharmBracelet.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
}

<!-- Checkout Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng nhập</h1>
        <form asp-action="Login" enctype="multipart/form-data">
            <div class="text-danger" asp-route-returnurl="@ViewBag.ReturnUrl" asp-validation-summary="All"></div>
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Username" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Username" class="form-control">
                            <span asp-validation-for="@Model.Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Password" class="form-control">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Place Order</button>
                <a asp-controller="Customer" asp-action="ForgetPassword" class="btn">Forget Password?</a>
            </div>
        </form>
    </div>
</div>
<!-- Checkout Page End -->
