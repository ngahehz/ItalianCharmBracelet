@model ItalianCharmBracelet.ViewModels.LoginVM


<form method="post" id="loginForm">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <label asp-for="@Model.Username" class="form-label" style="margin-bottom: 0.2rem;"></label><sup>*</sup>
        <input asp-for="@Model.Username" class="form-control" style="margin-top: 0.2rem;" value="s">
        <span asp-validation-for="@Model.Username" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Password" class="form-label mt-5" style="margin-bottom: 0.2rem;"></label><sup>*</sup>
        <input asp-for="@Model.Password" class="form-control" style="margin-bottom: 0.2rem;" value="123456">
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <p class="small pb-lg-2 d-flex justify-content-end"><a class="" href="#!">Forgot password?</a></p>
    </div>

    <div class="d-flex justify-content-center mt-5">
        <button type="submit" class="btn btn-outline-danger px-5">Login</button>
    </div>
</form>

<div class="d-flex justify-content-center text-center mt-3 pt-1">
    <a href="#!"><i class="fab fa-facebook-f fa-lg"></i></a>
    <a href="#!"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
    <a href="#!"><i class="fab fa-google fa-lg"></i></a>
</div>
<p class="mt-5 justify-content-center text-center ">
    Don't have an account? <a href="javascript:void(0);" onclick="showRegisterModal()" class=" fw-bold">Sign Up</a>
</p>
